<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#EFF1F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.deekshithreddy.attendancesystem.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance Management System"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Parent"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/studentlogin"
        android:layout_alignBottom="@+id/studentlogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/parentlogin" />

    <Button
        android:id="@+id/studentlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Student"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stafflogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Staff"
        android:layout_alignBaseline="@+id/studentlogin"
        android:layout_alignBottom="@+id/studentlogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp" />

    <TextView
        android:text="How do you want to Login?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/parentlogin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
